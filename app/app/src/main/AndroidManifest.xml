<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tienda.movil">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Tienda Móvil"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.products.ProductsActivity" />
        <activity android:name=".ui.cart.CartActivity" />
        <activity android:name=".ui.clients.ClientsActivity" />
        <activity android:name=".ui.map.MapActivity" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AQUÍ_TU_API_KEY_DE_GOOGLE_MAPS" />
    </application>

</manifest>
